<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="@android:color/background_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="16dp"
                android:padding="9dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarm Options"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/btn_close"
                app:layout_constraintEnd_toStartOf="@id/btn_save"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="@font/open_sans_semi_bold"
                />

            <ImageView
                android:id="@+id/btn_save"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="@android:color/background_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_tick"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!--repeat section-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:id="@+id/view_repeat_bg"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:foreground="?selectableItemBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:targetApi="m" />

                <ImageView
                    android:id="@+id/img_repeat"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_repeat"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/view_repeat_bg"
                    app:layout_constraintBottom_toBottomOf="@id/view_repeat_bg"
                    app:layout_constraintStart_toStartOf="@id/view_repeat_bg"
                    app:layout_constraintEnd_toEndOf="@id/view_repeat_bg"
                    app:layout_constraintHorizontal_bias="0"
                    />


                <TextView
                    android:id="@+id/txt_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm Repeat"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintTop_toTopOf="@id/view_repeat_bg"
                    app:layout_constraintStart_toEndOf="@id/img_repeat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/txt_repeat_value"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_chainStyle="packed"
                    />

                <TextView
                    android:id="@+id/txt_repeat_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Once"
                    android:textSize="12sp"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/txt_repeat"
                    app:layout_constraintTop_toBottomOf="@id/txt_repeat"
                    app:layout_constraintBottom_toBottomOf="@id/view_repeat_bg"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_repeat_bg"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:id="@+id/view_vibrate"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:foreground="?selectableItemBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:targetApi="m" />

                <ImageView
                    android:id="@+id/img_vibrate"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_vibration"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/view_vibrate"
                    app:layout_constraintBottom_toBottomOf="@id/view_vibrate"
                    app:layout_constraintStart_toStartOf="@id/view_vibrate"
                    app:layout_constraintEnd_toEndOf="@id/view_vibrate"
                    app:layout_constraintHorizontal_bias="0"
                    />


                <TextView
                    android:id="@+id/txt_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vibrate on alarm"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintTop_toTopOf="@id/view_vibrate"
                    app:layout_constraintStart_toEndOf="@id/img_vibrate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_chainStyle="packed"
                    />


                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/view_vibrate"
                    app:layout_constraintBottom_toBottomOf="@id/view_vibrate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_vibrate"
                    app:layout_constraintHorizontal_bias="1"
                    android:layout_marginEnd="16dp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_vibrate"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:id="@+id/view_custom_time"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:foreground="?selectableItemBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:targetApi="m" />

                <ImageView
                    android:id="@+id/img_custom_time"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_clock"
                    android:scaleType="fitCenter"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/view_custom_time"
                    app:layout_constraintBottom_toBottomOf="@id/view_custom_time"
                    app:layout_constraintStart_toStartOf="@id/view_custom_time"
                    app:layout_constraintEnd_toEndOf="@id/view_custom_time"
                    app:layout_constraintHorizontal_bias="0"
                    />


                <TextView
                    android:id="@+id/txt_custom_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Time"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans_regular"
                    app:layout_constraintTop_toTopOf="@id/view_custom_time"
                    app:layout_constraintStart_toEndOf="@id/img_custom_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_chainStyle="packed"
                    />


                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/view_custom_time"
                    app:layout_constraintBottom_toBottomOf="@id/view_custom_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_custom_time"
                    app:layout_constraintHorizontal_bias="1"
                    android:layout_marginEnd="16dp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_custom_time"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>



    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>