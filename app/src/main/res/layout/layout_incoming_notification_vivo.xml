<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:background="@drawable/background_incoming_notification"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/txt_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="You missed an alarm from Messenger"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginStart="16dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_notification_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dismiss"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@color/delete_item"
                    android:textColor="@color/color_white"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:maxLines="1" />


                <TextView
                    android:id="@+id/btn_notification_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Messenger"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="5dp"
                    android:layout_marginStart="8dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@color/success_color"
                    android:textColor="@color/color_white"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:maxLines="1" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="54dp"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_round" />

    </LinearLayout>




</LinearLayout>