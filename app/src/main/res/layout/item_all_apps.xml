<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_all_app"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:layout_marginEnd="8dp"
        android:foreground="?selectableItemBackground"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/card_view_color"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_app_icon"
                android:layout_width="50dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toStartOf="@id/tv_app_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tool:src="@mipmap/ic_launcher_round"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="18sp"
                android:maxLines="1"
                android:textColor="@color/colorTextRegular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_app_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0"
                tool:text="Mi Remote" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/layout_expand_section"
        app:layout_constraintTop_toBottomOf="@id/card_view_all_app"
        >

        <LinearLayout
            android:id="@+id/layout_selection"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            >


            <!--Alarm-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/colorAccent"
                    app:cardCornerRadius="12dp"
                    android:id="@+id/card_alarm"
                    app:cardElevation="2dp"
                    android:layout_margin="4dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_alarm"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:textColor="@color/colorTextRegular"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="Alarm"
                            android:maxLines="2"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textAlignment="center"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    android:id="@+id/card_speak"
                    android:clickable="true"
                    android:layout_margin="4dp"
                    android:focusable="true"
                    app:cardElevation="2dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_speak"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:textColor="@color/default_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="Speak"
                            android:maxLines="2"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textAlignment="center"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    android:id="@+id/card_custom"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="2dp"
                    android:layout_margin="4dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/txt_custom"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:textColor="@color/default_text"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="Custom"
                            android:maxLines="2"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textAlignment="center"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/txt_option_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Configure alarm for this app, when there will be a message. You will get an Alarm"
            app:layout_constraintTop_toBottomOf="@id/layout_selection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_app_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_option_notice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            android:text="Configure Alarm"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>