<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.app.messagealarm.ui.widget.CustomStatusBarView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="#363A3D"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_buy_pro_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_header_individual_offer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="start"
                    android:text="Individual\nOffer"
                    android:textAllCaps="true"
                    android:textColor="@color/color_white"
                    app:layout_constraintBottom_toTopOf="@+id/image_app_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_app_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_upwork"
                    app:layout_constraintBottom_toBottomOf="@+id/text_header_individual_offer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_sub_title_cool"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="start"
                    android:text="Cool!! You have been with us for sd long  ðŸ¤² "
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_12"
                    app:layout_constraintBottom_toTopOf="@+id/text_decide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_header_individual_offer"

                    />

                <TextView
                    android:id="@+id/text_decide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:text="We decided to give "
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_sub_title_cool" />

                <TextView
                    android:id="@+id/text_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@drawable/text_gradient"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="4dp"
                    android:text="72% sale"
                    android:textAllCaps="false"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_16"
                    app:cornerRadius="@dimen/elevation_4"
                    app:layout_constraintBottom_toBottomOf="@+id/text_decide"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/text_decide"
                    app:layout_constraintTop_toBottomOf="@+id/text_sub_title_cool"
                    app:layout_constraintTop_toTopOf="@+id/text_decide" />


                <TextView
                    android:id="@+id/text_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="to our most loyal users! "
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_pro_version"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_sale" />


                <TextView
                    android:id="@+id/text_pro_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="24dp"

                    android:text="@string/text_pro"
                    android:textColor="#7F868C"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_pro"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_user" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pro"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:background="@drawable/button_gradient"
                    android:elevation="6dp"
                    android:insetLeft="0dp"
                    android:insetTop="4dp"
                    android:insetRight="4dp"
                    android:insetBottom="0dp"
                    android:text="@string/text_buy_pro"
                    app:backgroundTint="@null"
                    app:cornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_pro_version" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>